<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:components="Components.player.components.*" 
		 xmlns:youtube="Components.player.youtube.*"
		 xmlns:coverflow="Components.coverflow.*"
		 width="100%" height="100%"
		 creationComplete="init()">
	
	<fx:Script>
		<![CDATA[
			import mx.core.IFlexDisplayObject;
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;
			
			[Bindable]
			public var selectedChannel : String = "";
			
			private function init():void
			{
				coverflow.addEventListener(CloseEvent.CLOSE, closeWindow);
			}
			
			private function closeWindow(e:CloseEvent):void 
			{
				PopUpManager.removePopUp(this as IFlexDisplayObject);
			}
			
		]]>
	</fx:Script>
	
	<coverflow:CoverFlow id="coverflow" width="100%" height="100%" selectedChannel="{selectedChannel}"/>
		
</s:Group>