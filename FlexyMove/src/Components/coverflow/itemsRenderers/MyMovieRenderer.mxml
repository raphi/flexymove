<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				width="100%" height="100%" autoDrawBackground="false"
				width.up="500" height.up="332" creationComplete="init(event)">
	
	<fx:Script>
		<![CDATA[
			import com.flexymove.VO.VideoInfoVO;
			
			private const YOUTUBE_IMG_URL:String = "http://img.youtube.com/vi/";
			
			import mx.events.FlexEvent;
			
			protected function init(event:FlexEvent):void
			{
				title.text = (data as VideoInfoVO).title;
				channel.text = "  (" + (data as VideoInfoVO).channel + ")";
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="up"/>
		<s:State name="overed"/>
	</s:states>

	<s:Group width="100%" height="100%" contentBackgroundColor="blue">
		<s:BitmapImage id="pellicule" source="@Embed('../assets/pellicule3.png')"
					   width="100%" height="100%"/>
		<s:BitmapImage id="film" source="{YOUTUBE_IMG_URL + (data as VideoInfoVO).idYoutubeVideo + '/0.jpg'}"
					   verticalCenter="0" horizontalCenter="0"  maxWidth="460" maxHeight="298" />
		<s:HGroup x.up="27" y.up="25" verticalAlign="middle" >
			<s:Label id="title" color="0x208015" fontSize="25" fontFamily="Cooper Std Black" />
			<s:Label id="channel" color="0x208015" fontSize="18" fontFamily="Cooper Std Black" />
		</s:HGroup>
	</s:Group>
</s:ItemRenderer>
