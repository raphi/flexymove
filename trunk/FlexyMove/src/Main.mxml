<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" 
					   xmlns:coverflow="Components.coverflow.*"
					   xmlns:gmap="Components.gmap.*"
					   minHeight="600" minWidth="1000"
					   title="FlexyMove"
					   showStatusBar="false">
	
	<fx:Style source="assets/css/design.css"/>
	
	<fx:Script>
		<![CDATA[
			import com.flexymove.Managers.NavigatorManager;
		]]>
	</fx:Script>

	<mx:ViewStack selectedIndex="{NavigatorManager.getInstance().currentView}" height="100%" width="100%"
				  contentBackgroundAlpha="0.5"
				  >
		<s:NavigatorContent>
			<gmap:MapView id="mapView"/>
		</s:NavigatorContent>
		<s:NavigatorContent>
			<coverflow:CoverFlow id="coverflowView"/>
		</s:NavigatorContent>
	</mx:ViewStack>
</s:WindowedApplication>
