<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" 
					   xmlns:coverflow="Components.coverflow.*"  >
	
	
	<fx:Metadata>
		[Event("change", type="mx.events.Event")]
	</fx:Metadata>
	
	<s:BitmapImage id="img"
				   source="@Embed('Components/coverflow/assets/background.jpg')"
				   fillMode="scale"
				   left="0" right="0"
				   top="0" bottom="0" />
	
	
	<s:VGroup width="100%" height="100%">
		<coverflow:CoverFlow id="coverflowID" />
		<s:Button label="View Maps" click="dispatchEvent( new Event( Event.CHANGE ) );" />
	</s:VGroup>
	
</s:WindowedApplication>
